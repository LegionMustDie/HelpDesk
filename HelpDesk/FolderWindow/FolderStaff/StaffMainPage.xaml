<Window x:Class="HelpDesk.FolderWindow.FolderStaff.StaffMainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelpDesk.FolderWindow.FolderStaff"
        mc:Ignorable="d"
        Title="Выбор раздела" Height="780" Width="1320"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        WindowStyle="None" Background="Transparent"
        AllowsTransparency="True">
    <Border Width="Auto" Height="Auto" Name="windowFrame"
          CornerRadius="15"
          Background="{DynamicResource Mainbg}"
          BorderThickness="3"
          BorderBrush="{DynamicResource MainStroke}">
        <Grid>
            <Frame x:Name="MainFrame"
                    NavigationUIVisibility="Hidden"
                    Grid.ColumnSpan="19" 
                    Grid.RowSpan="9"
                    Background="Transparent"/>
        </Grid>
    </Border>
</Window>
